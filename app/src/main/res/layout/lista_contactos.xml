<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_vertical">

    <com.proyectotema6.ricardo.agenda.ImagenRedondeada
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_contacto1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_nombre1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_contacto1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_numero1"
        android:layout_below="@+id/txt_nombre1"
        android:layout_toEndOf="@+id/img_contacto1" />

</RelativeLayout>